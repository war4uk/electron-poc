{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@angular/core": ["node_modules/@angular/core"],
      "rxjs/*": ["node_modules/rxjs/*"]
    },
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [ "node_modules" ]
}
